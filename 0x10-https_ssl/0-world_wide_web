#!/usr/bin/env bash
# Function to retrieve DNS information and output formatted result
get_dns_info() {
    local domain="$1"
    local subdomain="$2"

    if [ -z "$subdomain" ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi

    for sub in "${subdomains[@]}"; do
        result=$(dig +short "$sub.$domain" | awk '{ if (NR == 1 && NF > 0) { print $1 } else { print "N/A" } }')
        if [ "$result" != "N/A" ]; then
            record_type=$(dig "$sub.$domain" +short | awk '{ print $1 }')
            destination=$(dig "$sub.$domain" +short)
            echo "The subdomain $sub is a $record_type record and points to $destination"
        fi
    done
}

# Check if arguments are provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"

get_dns_info "$domain" "$subdomain"  
